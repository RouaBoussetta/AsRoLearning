<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asrolearning">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AsRoLearning">
        <activity
            android:name=".Controller.WebActivity"
            android:exported="true" />
        <activity
            android:name=".Controller.Login"
            android:exported="true" />
        <activity
            android:name=".Controller.UserRegister"
            android:exported="true" />
        <activity
            android:name=".Controller.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.AboutTopicActivity"
            android:exported="true" />
        <activity
            android:name=".Controller.QuizResultsActivity"
            android:exported="true" />
        <activity
            android:name=".Controller.QuizActivity"
            android:exported="true" />
        <activity
            android:name=".Controller.MainActivity"
            android:exported="true" />
    </application>

</manifest>